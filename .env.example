# ======================================
# PPE Detection - Environment Variables
# ======================================

# --------------------------------------
# Backend Configuration
# --------------------------------------

# Database Configuration
# For SQLite (Default - Development)
DATABASE_URL=sqlite:///./data/ppe_detection.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://ppe_user:ppe_password@postgres:5432/ppe_detection

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Model Configuration
MODEL_PATH=/app/mlsrc/weights/best.pt
MODEL_CONFIDENCE_THRESHOLD=0.25

# Python Configuration
PYTHONUNBUFFERED=1

# --------------------------------------
# Frontend Configuration
# --------------------------------------

# API URL (used by frontend to connect to backend)
# For development (accessing from host machine)
NEXT_PUBLIC_API_URL=http://localhost:8000

# For production (accessing from Docker network)
# NEXT_PUBLIC_API_URL=http://backend:8000

# Node Environment
NODE_ENV=production

# --------------------------------------
# Database (PostgreSQL) Configuration
# --------------------------------------

POSTGRES_USER=ppe_user
POSTGRES_PASSWORD=ppe_password
POSTGRES_DB=ppe_detection

# --------------------------------------
# Nginx Configuration
# --------------------------------------

NGINX_PORT=80
NGINX_SSL_PORT=443

# --------------------------------------
# Docker Configuration
# --------------------------------------

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=ppe-detection

# Docker registry (for pushing images)
# DOCKER_REGISTRY=ghcr.io/your-username

# --------------------------------------
# Application Configuration
# --------------------------------------

# Logging Level
LOG_LEVEL=INFO

# Max Upload Size (MB)
MAX_UPLOAD_SIZE_MB=100

# CORS Origins (comma separated)
CORS_ORIGINS=*

# --------------------------------------
# Security Configuration
# --------------------------------------

# Secret Key for JWT (if implementing authentication)
# SECRET_KEY=your-secret-key-here

# JWT Expiration (minutes)
# JWT_EXPIRATION=60

# API Rate Limiting
API_RATE_LIMIT=100

# --------------------------------------
# Monitoring and Analytics
# --------------------------------------

# Enable metrics
ENABLE_METRICS=true

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# --------------------------------------
# Development Settings
# --------------------------------------

# Enable debug mode
DEBUG=false

# Enable hot reload
RELOAD=false

# Enable verbose logging
VERBOSE=false
